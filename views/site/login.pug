extends ../layout

block content 
   .container
    .row
        .col-sm-6.col-md-4.col-md-offset-4
            h1.text-center.login-title Sign in to continue to Soko Estate
            .account-wall
                img.profile-img(src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120' alt='')
                form.form-signin(method='post',action='/login')
                    input.form-control(type='text' placeholder='Email' required='' autofocus='',name='username')
                    input.form-control(type='password' placeholder='Password' required='',name='password')
                    button.btn.btn-lg.btn-primary.btn-block(type='submit')
                        | Login
                    a.btn-gp-link(href="/auth/facebook")
                      button.btn.btn-lg.btn-info.btn-block(type='button')
                          | Login in with Facebook
                    a.btn-gp-link(href="/auth/google")
                      button.btn.btn-lg.btn-danger.btn-block(type='button')
                          | Login with Google
                    label.checkbox.pull-left
                        input(type='checkbox' value='remember-me' style="float: left; margin-left: -55px;")
                        | Remember me
                    span.clearfix
            a.text-center.new-account(href='/register') Create an account 
